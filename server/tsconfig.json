{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",

    "declaration": false,
    "declarationMap": false,

    "strict": true,
    "skipLibCheck": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
